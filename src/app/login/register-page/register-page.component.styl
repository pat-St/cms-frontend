.login-page {
  width: 100%;
  height: 100vh;  
}

.header {
  height: 10vh; 
}

.mat-form-field {
  width: 100%;  
}
.example-form {
  min-height: 10rem;  
}
.login-card {
  max-width: 30rem;
  width: auto;
  margin: auto;
}

mat-form-field {
  margin: auto;
}
.mat-stroked-button {
  padding-top: 0.26em;
  vertical-align: middle;
  font-size: 2.0rem;
  padding-bottom: 0.26em;
  margin-top: -0.3em;
  margin-right: 12px;
}
.add-button {
  width: 100%;
  font-size: 1.2rem;
}
.click-button {
  font-weight: 100;
}
input.example-right-align::-webkit-outer-spin-button,
input.example-right-align::-webkit-inner-spin-button {
  display: none;
}

input.example-right-align {
  -moz-appearance: textfield;
}
.mat-spinner {
  margin-left: auto;
  margin-right: auto;
}